<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ff"

    android:layout_height="match_parent"
    tools:context=".Ranting.LoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/mybaganime">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/icom" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="SALDO KAS SEKARANG"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:text="berapa?"
        android:layout_gravity="center"
        android:id="@+id/idapah1"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_height="wrap_content">

    </TextView>

   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="PSHT My Kas"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:id="@+id/idperingatan"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_gravity="center"
    android:layout_marginTop="70dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="21dp" />



        <EditText
            android:id="@+id/idemail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
android:layout_marginBottom="20dp"
            android:hint=""
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textAlignment="center"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/idpass"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint=""
            android:textStyle="bold" />


    </LinearLayout>
        </LinearLayout> </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btlogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:text="Login"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF"
        android:textStyle="bold" />

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txpayah"
        android:layout_height="wrap_content"/>


</LinearLayout>