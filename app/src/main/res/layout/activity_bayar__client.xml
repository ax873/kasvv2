<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"

        android:layout_marginRight="20dp"
android:background="@drawable/nm"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_height="580dp">
    <TextView
        android:layout_width="match_parent"
        android:text="Nama Profile"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/ididan"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tamplhutang"
        android:text="Hutang Anda"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/liwkas"
        android:layout_height="580dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtapayah"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:text="Menu"
        android:onClick="mantab"
        android:layout_marginTop="5dp"
        android:textColor="@color/putiih"
        android:background="@drawable/btn"
        android:layout_height="wrap_content">

    </Button>
</LinearLayout>