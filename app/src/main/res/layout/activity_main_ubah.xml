<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
android:background="@drawable/ub"
    android:layout_height="match_parent"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:background="@drawable/mybaganime"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/icom"
            android:layout_gravity="center"
            android:layout_height="50dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="450dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#F6F6F6"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tcttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/Idid1ubah"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY KAS "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30dp" />


            <TextView
                android:layout_width="wrap_content"
                android:text="Nama "
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>
    <EditText
        android:hint="Nama"
        android:id="@+id/txtnama1"

        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="220dp"

        android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Tanggal"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>


            <EditText
        android:hint="Tanggal"
        android:id="@+id/txtranting1"

        android:layout_gravity="center"
        android:textStyle="bold"
        android:enabled="false"
        android:layout_width="220dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_datepicker"

        android:layout_height="20dp"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:background="@color/putiih"
        android:layout_marginTop="-12dp"
        android:textAlignment="center" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Jumlah"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/txtjumlah1"
       android:inputType="number"
        android:gravity="center"

        android:focusable="true"
        android:digits="0123456789.,"
        android:layout_gravity="center"
        android:ems="10"
        android:layout_width="220dp"
        android:layout_height="50dp"
        />
    <EditText
        android:layout_width="170dp"
        android:id="@+id/etnumber"
        android:text="Jumlah"
        android:layout_marginTop="-6dp"
        android:background="#F6F6F6"
        android:enabled="false"
        android:layout_height="wrap_content"/>
</LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:text="Deskripsi"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtdesk1"
        android:hint="Tulis Keterangan"

        android:layout_width="220dp"
        android:textStyle="bold"
        android:layout_gravity="center"

        android:layout_height="70dp"/>


    <EditText
        android:id="@+id/txtidkas1"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:enabled="false"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        android:hint="id"
        android:visibility="invisible"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="220dp"
        android:layout_width="wrap_content"
        android:id="@+id/Iid1ubah"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/uwu"
        android:textColor="#1492e6"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/bantuankeluar"
        android:textColor="#1492e6"
        android:layout_height="wrap_content"/>

        </LinearLayout> </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="120dp"
            android:background="@drawable/btn"
            android:id="@+id/bthapus"
            android:text="hapus"
            android:textColor="#FFFF"
            android:layout_height="wrap_content"/>

        <Button

            android:id="@+id/btsimpan1"
            android:layout_width="120dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:text="simpan"
            android:textColor="#FFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/ketrayon"
        android:visibility="invisible"
        android:layout_height="wrap_content"/>

</LinearLayout>