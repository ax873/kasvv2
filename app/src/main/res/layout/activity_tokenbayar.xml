<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ranting.tokenbayar">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtidtoken"
        android:text="Tunggu Jaringan "
        android:textSize="30dp"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edidtooken"
        />
    <Button
        android:layout_width="220dp"
        android:id="@+id/simpntoken"
        android:textColor="@color/putiih"
        android:text="Simpan"
        android:layout_gravity="center"
        android:background="@drawable/btn"
        android:layout_height="wrap_content"/>
<TextView
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:layout_marginTop="40dp"
    android:layout_height="wrap_content"
    android:text="untuk nomor admin awali dengan 62 lalu isi belakangnya misal 628561111111"
    />
</LinearLayout>