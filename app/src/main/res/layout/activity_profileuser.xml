<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profi"
    android:layout_height="match_parent"
    tools:context=".profile.profileuser">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/pimage"
        app:civ_border_width="2dp"
        app:civ_border_color="#2196F3"
        android:src="@drawable/photo"
        android:layout_height="200dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:outlineSpotShadowColor="@color/purple_200"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="NAMA"
        android:paddingTop="20dp"
        android:textSize="10dp"
       android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="220dp"
        android:id="@+id/pnama"
        android:layout_marginLeft="80dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Rayon"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="220dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/prayon"
        android:enabled="false"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Hutang"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="220dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/phutang"
        android:enabled="false"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Status"
        android:paddingTop="10dp"
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="220dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/pemail"
        android:enabled="false"
        android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

<Button
    android:layout_width="200dp"
    android:background="@drawable/btsn"
    android:layout_height="50dp"
    android:text="Log out"
    android:textAlignment="center"
    android:textColor="@color/putiih"
    android:layout_marginTop="20dp"
    android:gravity="right"
    android:id="@+id/psimpan"
    android:layout_gravity="center"
 />
</LinearLayout>