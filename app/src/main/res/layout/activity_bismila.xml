<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splas"
    android:orientation="vertical"
    tools:context=".loginnomo.bismila">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:text="PENDAFTARAN DENGAN NOMOR"
        android:layout_gravity="center"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:text=" INDUK WARGA"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/rregnama"
        android:hint="NIW"
        android:ems="10"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/rregpass"
        android:hint="KATA SANDI"
        android:ems="10"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/rregimaga"
        android:hint="HUTANG"
        android:ems="10"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/rregstats"
        android:hint="STATUS"
        android:ems="10"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/rregray"
        android:hint="RAYON"
        android:ems="10"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="DAFTARKAN"
        android:textColor="@color/putiih"
        android:layout_marginBottom="10dp"
        android:layout_width="220dp"
        android:id="@+id/btregregnum"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/rididreg"
        android:visibility="invisible"
        android:hint="id"
        android:layout_height="wrap_content"/>


</LinearLayout>